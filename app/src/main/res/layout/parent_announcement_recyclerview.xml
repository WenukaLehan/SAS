<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/anouncementCard"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="28dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#DAD6DA"
        android:backgroundTint="#DAD6DA">

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/recImage"
            android:src="@drawable/marketing"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:scaleType="centerCrop" />
        <TextView
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:id="@+id/announcementTitle"
            android:text="Title"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="70dp"
            android:gravity="center"
            android:layout_toEndOf="@id/recImage"/>

        <TextView
            android:id="@+id/click"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginStart="160dp"
            android:layout_marginTop="50dp"
            android:layout_alignParentBottom="@id/announcementTitle"
            android:gravity="center"
            android:text="click here"
            android:textAlignment="center"
            android:textColor="@color/gg"
            android:textSize="16sp" />
    </RelativeLayout>


</androidx.cardview.widget.CardView>